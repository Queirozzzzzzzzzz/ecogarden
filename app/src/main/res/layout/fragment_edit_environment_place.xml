<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.editEnvironment.EditEnvironmentActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        tools:ignore="MissingConstraints">

        <View
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:background="@color/primary"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_environment_title"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/header"
            app:layout_constraintEnd_toEndOf="@id/header"
            app:layout_constraintStart_toStartOf="@id/header"
            app:layout_constraintTop_toTopOf="@id/header" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="75dp"
        android:orientation="vertical"
        tools:context=".ui.editEnvironment.fragments.EditEnvironmentPlaceFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_cancel_environment"
                android:layout_width="@dimen/cancel_btn_width"
                android:layout_height="@dimen/cancel_btn_height"
                android:layout_marginTop="@dimen/cancel_btn_margin"
                android:layout_marginBottom="@dimen/cancel_btn_margin"
                android:background="@drawable/cancel_button"
                android:onClick="cancelEditEnvironment"
                android:text="@string/cancel_btn"
                android:textColor="@color/white"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_environment_place_subtitle"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/subtitle_size"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:gravity="start"
            android:orientation="vertical"
            android:padding="@dimen/default_linear_layout_padding">

            <LinearLayout
                android:id="@+id/closed_environment_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/closed_environment_checkbox"
                    android:layout_width="@dimen/checkbox_width"
                    android:layout_height="@dimen/checkbox_height"
                    android:layout_margin="@dimen/checkbox_margin"
                    android:contentDescription="@string/checkbox_description"
                    android:src="@drawable/checkbox_unchecked" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_environment_place_closed_environments_text"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/open_environment_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/open_environment_checkbox"
                    android:layout_width="@dimen/checkbox_width"
                    android:layout_height="@dimen/checkbox_height"
                    android:layout_margin="@dimen/checkbox_margin"
                    android:contentDescription="@string/checkbox_description"
                    android:src="@drawable/checkbox_unchecked" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_environment_place_open_environments_text"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/biome_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingStart="@dimen/checkbox_margin"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="@dimen/text_size"
                    android:text="@string/edit_environment_place_biome"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/biome"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_height"
                    android:spinnerMode="dropdown"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/photo_icon"
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/icon_height"
                    android:layout_margin="@dimen/icon_margin"
                    android:contentDescription="@string/checkbox_description"
                    android:src="@drawable/camera_icon" />

                <TextView
                    android:id="@+id/photo_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_environment_place_photo_text"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/photo_explain_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/explain_me_text"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="@dimen/small_text_size" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_next"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:layout_marginTop="@dimen/btn_margin"
                android:layout_marginBottom="@dimen/btn_margin"
                android:background="@drawable/default_button"
                android:onClick="goalFragment"
                android:text="@string/next_btn"
                android:textColor="@color/white"
                android:textSize="@dimen/btn_text_size"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>