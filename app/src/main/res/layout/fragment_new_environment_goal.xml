<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewEnvironmentActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        tools:ignore="MissingConstraints">

        <View
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:background="@color/primary"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_environment_title"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/header"
            app:layout_constraintEnd_toEndOf="@id/header"
            app:layout_constraintStart_toStartOf="@id/header"
            app:layout_constraintTop_toTopOf="@id/header" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="75dp"
        android:orientation="vertical"
        tools:context=".fragments.NewEnvironmentGoalFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="@dimen/small_btn_width"
                android:layout_height="@dimen/small_btn_height"
                android:layout_marginTop="@dimen/small_btn_margin"
                android:layout_marginBottom="@dimen/small_btn_margin"
                android:background="@drawable/default_button"
                android:onClick="placeFragment"
                android:text="@string/back_btn"
                android:textColor="@color/white"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_environment_goal_subtitle"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/subtitle_size"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:gravity="start"
            android:orientation="vertical"
            android:padding="25dp">

            <LinearLayout
                android:id="@+id/aesthetic_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/aesthetic_checkbox"
                    android:layout_width="@dimen/checkbox_width"
                    android:layout_height="@dimen/checkbox_height"
                    android:layout_margin="@dimen/checkbox_margin"
                    android:contentDescription="@string/checkbox_description"
                    android:src="@drawable/checkbox_unchecked" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/new_environment_goal_aesthetic_option"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/air_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/air_checkbox"
                    android:layout_width="@dimen/checkbox_width"
                    android:layout_height="@dimen/checkbox_height"
                    android:layout_margin="@dimen/checkbox_margin"
                    android:contentDescription="@string/checkbox_description"
                    android:src="@drawable/checkbox_unchecked" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/new_environment_goal_air_option"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/medicinal_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/medicinal_checkbox"
                    android:layout_width="@dimen/checkbox_width"
                    android:layout_height="@dimen/checkbox_height"
                    android:layout_margin="@dimen/checkbox_margin"
                    android:contentDescription="@string/checkbox_description"
                    android:src="@drawable/checkbox_unchecked" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/new_environment_goal_medicinal_option"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/spices_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/spices_checkbox"
                    android:layout_width="@dimen/checkbox_width"
                    android:layout_height="@dimen/checkbox_height"
                    android:layout_margin="@dimen/checkbox_margin"
                    android:contentDescription="@string/checkbox_description"
                    android:src="@drawable/checkbox_unchecked" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/new_environment_goal_spices_option"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_next"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:layout_marginTop="@dimen/btn_margin"
                android:layout_marginBottom="@dimen/btn_margin"
                android:background="@drawable/default_button"
                android:onClick="plantsFragment"
                android:text="@string/next_btn"
                android:textColor="@color/white"
                android:textSize="@dimen/btn_text_size"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>